  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %><br>

    <%= f.submit 'Update Book' %><br>

    <a><%= link_to "show", book_path(@book.id) %></a>
    <a><%= link_to :back , :back %></a>

<% end %>
