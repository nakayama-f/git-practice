
<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="notice">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @book do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <br>
    <br>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br>
    <br>
    <%= f.submit 'Update Book' %><br>
    <br>

    <a><%= link_to "show", book_path(@book.id) %></a>
    |
    <a><%= link_to :back , '/books' %></a>
<% end %>


