<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<%elsif flash[:noti] %>
  <div class="flash-noti">
    <%= flash[:noti] %>
  </div>
<%elsif flash[:notice3] %>
  <div class="flash-3">
    <%= flash[:notice3] %>
  </div>
<% else %>
  ;
<% end %>

<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>
    <tbody><% @books.each do |book| %>
        <tr>
            <td>
                <%= book.title %>
            </td>
            <td>
                <%= book.body %>
            </td>
            <td>
                <%= link_to "Show", book_path(book.id) %>
                <%= link_to "Edit", edit_book_path(book.id) %>
                <%= link_to "Destroy", book_path(book.id) , "data-confirm" => "Are you sure?" %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>

<% flash[:notice] %>
<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model:@book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body%>

  <br><%= f.submit 'Create Book' %><br>
<% end %>


