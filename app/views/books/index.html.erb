<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<%elsif flash[:noti] %>
  <div class="flash-noti">
    <%= flash[:noti] %>
  </div>
<%elsif flash[:notice3] %>
  <div class="flash-3">
    <%= flash[:notice3] %>
  </div>
<% else %>
  <div></div>
<% end %>

<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody><% @book.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id) , method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
    <% end %>
    </tbody>
</table>


<h1>New book</h1>

<%= form_with model:@book do |f| %>
  <% if @book2.errors.any? %>
    <div id="error">
      <h2><%= @book2.errors.count %>errors prohibited this book from being saved</h2>
      <ul>
        <% @book2.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>



  <h4>Body</h4>
  <%= f.text_area :body%>


  <br><%= f.submit 'Create Book' %><br>
<% end %>


